{
  "name": "autoblog-cli",
  "version": "0.1.0",
  "description": "CLI tool for managing markdown files to Autoblog",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "autoblog": "dist/index.js"
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node --esm src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "lint": "prettier --check . && tsc --noEmit",
    "lint:fix": "prettier --write .",
    "format": "prettier --write .",
    "prepare": "npm run build"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "automerge",
    "blog",
    "cli",
    "markdown",
    "local-first"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/evcraddock/autoblog.git"
  },
  "lint-staged": {
    "autoblog-cli/**/*.ts": [
      "tsc --noEmit"
    ]
  },
  "dependencies": {
    "@automerge/automerge": "^2.2.9",
    "@automerge/automerge-repo": "^2.0.7",
    "@automerge/automerge-repo-network-websocket": "^2.0.7",
    "@automerge/automerge-repo-storage-nodefs": "^2.0.7",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@vitest/ui": "^3.2.4",
    "execa": "^9.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "memfs": "^4.17.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
